+retry_it:
 		if (blks > ss->max_xfer_blk)
 			smallblks = ss->max_xfer_blk;
 		else
 			smallblks = (unsigned short) blks;
-retry_it:
 		if (smallblks == ss->max_xfer_blk)
 			usb_show_progress();
 		srb->datalen = block_dev->blksz * smallblks;
@@ -1187,6 +1233,26 @@ retry_it:
 			debug("Read ERROR\n");
